---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout>
  <section class="min-h-screen px-4 py-24 pt-32">
    <div class="container mx-auto max-w-6xl">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-blue-400 via-purple-500 to-cyan-400 bg-clip-text text-transparent">
          About RailDevHub
        </h1>
        <p class="text-xl text-gray-300 mb-4">
          15 Engineers. One Mission. Infinite Possibilities.
        </p>
      </div>
      
      <!-- Company Overview -->
      <div class="grid lg:grid-cols-3 gap-6 mb-16">
        <!-- Large Card - Who We Are -->
        <div class="lg:col-span-2 bg-dark-tertiary/50 backdrop-blur-lg rounded-2xl p-8 border border-white/10">
          <h2 class="text-3xl font-bold mb-6">Our Identity</h2>
          <div class="space-y-4 text-gray-300 leading-relaxed">
            <p>
              RailDevHub is the AI and software engineering division of PiA Group, 
              a leading technology company transforming industrial digitalization 
              and transportation systems across Europe and beyond.
            </p>
