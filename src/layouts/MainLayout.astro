---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ThemeProvider from '../components/ThemeProvider';

interface Props {
  title?: string;
}

const { title = 'RailDevHub' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="RailDevHub - Engineering Intelligence for Modern Infrastructure" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Educational Notice Banner -->
    <div class="fixed top-0 left-0 right-0 z-50 bg-gradient-to-r from-blue-600 to-purple-600 text-white text-center py-4 px-4 text-xs md:text-sm shadow-lg">
      <div class="container mx-auto max-w-6xl">
        <span class="font-medium">ðŸŽ“ Educational Project</span>
        <span class="mx-1 md:mx-2 hidden sm:inline">â€¢</span>
        <span class="block sm:inline mt-1 sm:mt-0">This website is created for learning purposes only and does not represent real data or services</span>
      </div>
    </div>

    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
    color: #e5e7eb;
    background: #050814;
    transition: background-color 0.3s ease, color 0.3s ease;
  }
  
  .light body {
    background: #f8fafc;
    color: #1f2937;
  }
  
  * {
    box-sizing: border-box;
  }
  
  a {
    text-decoration: none;
  }
  
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
  }
  
  ::-webkit-scrollbar-track {
    background: #0a0e27;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #3b82f6;
    border-radius: 5px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #2563eb;
  }
</style>

