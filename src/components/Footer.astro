---
import { translations } from '../utils/translations';
import { getPath } from '../utils/navigation';
const t = translations.en;
---

<footer class="bg-dark-secondary border-t border-white/10 mt-20">
  <div class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-2xl font-bold mb-4 bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">
          RailDevHub
        </h3>
        <p class="text-gray-300">
          {t.footer.tagline}
        </p>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">{t.footer.contact}</h4>
        <a href={`mailto:${t.footer.email}`} class="text-gray-300 hover:text-white transition-colors">
          {t.footer.email}
        </a>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">{t.footer.links}</h4>
        <nav class="flex flex-col gap-2">
          <a href={getPath('/')} class="text-gray-300 hover:text-white transition-colors">{t.nav.home}</a>
          <a href={getPath('/about')} class="text-gray-300 hover:text-white transition-colors">{t.nav.about}</a>
          <a href={getPath('/projects')} class="text-gray-300 hover:text-white transition-colors">{t.nav.projects}</a>
          <a href={getPath('/expertise')} class="text-gray-300 hover:text-white transition-colors">{t.nav.expertise}</a>
        </nav>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-white/10 text-center text-gray-400">
      <p class="mb-2">{t.footer.copyright}</p>
      <p class="text-xs text-gray-500 light:text-gray-600 max-w-2xl mx-auto leading-relaxed">
        This project is developed for educational purposes only and does not reflect real-world data or services.
        All content, projects, and information presented are fictional and created solely for learning and demonstration purposes.
      </p>
    </div>
  </div>
</footer>


