---
import { translations } from '../utils/translations';
const t = translations.en;
---

<footer class="bg-dark-secondary border-t border-white/10 mt-20">
  <div class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-2xl font-bold mb-4 bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">
          RailDevHub
        </h3>
        <p class="text-gray-300">
          {t.footer.tagline}
        </p>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">{t.footer.contact}</h4>
        <a href={`mailto:${t.footer.email}`} class="text-gray-300 hover:text-white transition-colors">
          {t.footer.email}
        </a>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">{t.footer.links}</h4>
        <nav class="flex flex-col gap-2">
          <a href="/" class="text-gray-300 hover:text-white transition-colors">{t.nav.home}</a>
          <a href="/about" class="text-gray-300 hover:text-white transition-colors">{t.nav.about}</a>
          <a href="/projects" class="text-gray-300 hover:text-white transition-colors">{t.nav.projects}</a>
          <a href="/expertise" class="text-gray-300 hover:text-white transition-colors">{t.nav.expertise}</a>
        </nav>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-white/10 text-center text-gray-400">
      <p>{t.footer.copyright}</p>
    </div>
  </div>
</footer>


